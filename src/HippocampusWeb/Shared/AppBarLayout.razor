@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<MudThemeProvider/>
<MudDialogProvider MaxWidth="MaxWidth.ExtraLarge"/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="0" Dense="true" Color="Color.Info">
        <MudText Typo="Typo.h6" Class="mr-4">Hippocampus</MudText>
        <MudIconButton Style="@($"color: white;")" Icon="@Icons.Filled.RemoveRedEye" @onclick="NavigateToMonitorsPage">Monitores</MudIconButton>
        <MudIconButton Style="@($"color: white;")" Icon="@Icons.Filled.History" @onclick="NavigateToHitoryLogPage">Histórico</MudIconButton>
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code
{
    private void NavigateToMonitorsPage() => NavigationManager.NavigateTo("Monitors");
    private void NavigateToHitoryLogPage() => NavigationManager.NavigateTo("History");
}