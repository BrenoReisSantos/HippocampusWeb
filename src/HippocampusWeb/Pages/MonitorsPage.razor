@page "/Monitors"

<MudTable T="MonitorInfo" Items="_testTableData" Hover="true">
    <HeaderContent>
        <MudTh>Nome</MudTh>
        <MudTh>Nível</MudTh>
        <MudTh>Estado</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Nome">@context.MonitorName</MudTd>
        <MudTd DataLabel="Nível">@context.MonitoLevel</MudTd>
        <MudTd DataLabel="Estado">@context.MonitorState.ToString()</MudTd>
    </RowTemplate>
</MudTable>

@code {

    public record MonitorInfo(string MonitorName, int MonitoLevel, State MonitorState);

    public enum State : byte
    {
        Cheio,
        Mediano,
        Vazio,
    }

    private IEnumerable<MonitorInfo> _testTableData = Enumerable.Empty<MonitorInfo>();

    protected override void OnInitialized()
    {
        base.OnInitialized();
        _testTableData = new List<MonitorInfo>()
        {
            new MonitorInfo("teste1", 100, State.Cheio),
            new MonitorInfo("teste2", 50, State.Mediano),
            new MonitorInfo("teste3", 5, State.Vazio),
        };
    }

}